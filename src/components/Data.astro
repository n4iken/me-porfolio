---
const { course, institute, dates } = Astro.props;
---

<div class="flex flex-col gap-3">
  <div>
    <h3 class="text-red-500 text-lg font-semibold">
      {course}
      <span class="font-normal text-red-400">- {institute}</span>
    </h3>
    <p class="text-zinc-500">{dates}</p>
  </div>
  <slot name="learnings" />
</div>
